<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/dimen_16dp"/>
            <stroke android:color="@color/title_bg" android:width="3dp"/>
            <solid android:color="@color/colorPressed" />
        </shape>
    </item>
    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <corners android:topLeftRadius="@dimen/dimen_16dp" android:topRightRadius="@dimen/dimen_16dp"/>
            <solid android:color="@android:color/transparent" />
        </shape>
    </item>

</selector>